<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #4caf50;
            color: white;
            padding: 10px;
            text-align: center;
        }
        .food-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px;
        }
        .food-item {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 20px;
            margin: 10px;
            width: 200px;
            text-align: center;
            cursor: pointer;
            position: relative;
        }
        .delete-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #ff5c5c;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
        }
        .add-food-button {
            margin-top: 20px;
            background-color: #4caf50;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
        }
        .delete-menu-button {
            margin-top: 20px;
            background-color: #ff5c5c;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <h1>Menu Page</h1>
    </header>

    <div class="food-container">
        <% FOODS.forEach(food => { %>
            <div class="food-item" onclick="viewFood('<%= food.FOOD_ID %>')">
                <h3><%= food.FOOD_NAME %></h3>
                <p>Food ID: <%= food.FOOD_ID %></p>
                <p>Price: <%= food.FOOD_PRICE %></p>
                <button class="delete-button" onclick="deleteFood('<%= food.FOOD_ID %>')">Delete</button>
            </div>
        <% }) %>
    </div>

    <button class="add-food-button" onclick="redirectToAddFood('<%= menuId %>')">Add Food</button>
    <button class="delete-menu-button" onclick="deleteMenu('<%= menuId %>')">Delete Menu</button>
    <script>
        function viewFood(foodId) {
            // Redirect or perform actions when a food item is clicked
            // For example, send a GET request to the server for detailed food information
            // You can use window.location.href or fetch API here
            console.log("Viewing food:", foodId);
        }
        function deleteMenu(menuId) {
            // Send a DELETE request to the server to delete the entire menu
            // For example, you can use the fetch API
            fetch(`/delmenu/${menuId}`, {
                method: "DELETE",
            })
            .then(response => response.json())
            .then(data => {
                console.log("Server response:", data);
                // Handle the server response as needed
            })
            .catch(error => {
                console.error("Error:", error);
                // Handle errors
            });
        }
        function deleteFood(foodId) {
            // Send a DELETE request to the server to delete the selected food item
            // For example, you can use the fetch API
            fetch(`/menu/${foodId}`, {
                method: "DELETE",
            })
            .then(response => response.json())
            .then(data => {
                console.log("Server response:", data);
                // Handle the server response as needed
            })
            .catch(error => {
                console.error("Error:", error);
                // Handle errors
            });
        }

        function redirectToAddFood(menuId) {
            // Redirect to the Add Food page with the menuId
            window.location.href = `/addfood/${menuId}`;
        }
    </script>
</body>
</html>
